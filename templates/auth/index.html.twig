<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>Laundry - Service de laverie & pressing en 48h</title>
  <base href="/">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="favicon.ico">
    {% block stylesheets %}
  {{ encore_entry_link_tags('app') }}
  {% endblock %}
  <script>
    function showForm(form) {
      document.getElementById('signup-form').classList.toggle('hidden', form !== 'signup');
      document.getElementById('login-form').classList.toggle('hidden', form !== 'login');
      document.getElementById('signup-tab').classList.toggle('text-blue-500', form === 'signup');
      document.getElementById('signup-tab').classList.toggle('font-semibold', form === 'signup');
      document.getElementById('login-tab').classList.toggle('text-blue-500', form === 'login');
      document.getElementById('login-tab').classList.toggle('font-semibold', form === 'login');
    }
    window.onload = function() {
      showForm('login');
    };
  </script>
</head>
<body class="bg-white min-h-screen flex items-stretch">
  <div class="flex-1 flex flex-col justify-between px-12 py-8 min-h-screen">
    <div>
      <span class="text-2xl font-bold text-blue-800">Laundry</span>
    </div>
    <div class="max-w-sm w-full mx-auto">
      <div class="flex items-center justify-between mb-6">
        <button id="signup-tab" class="text-2xl mr-2 focus:outline-none transition"
                onclick="showForm('signup')" type="button">
          Inscription
        </button>
        <button id="login-tab" class="text-2xl focus:outline-none transition"
                onclick="showForm('login')" type="button">
          Connexion
        </button>
      </div>
      <div id="signup-form" class="space-y-4" autocomplete="off">
        {{ form(signup) }}
      </div>
      
      <form id="login-form" class="space-y-4 hidden" autocomplete="off">
        <input type="email" placeholder="Email"
          class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500 transition" />
        <input type="password" placeholder="Mot de passe"
          class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500 transition pr-10" />
        <button type="submit"
          class="w-full bg-blue-500 text-white font-semibold rounded py-2 transition hover:bg-blue-400">Connecter</button>
      </form>
      <div class="mt-4 text-sm flex items-center gap-1">
        <span class="text-gray-500">Mot de passe oublié ?</span>
        <a href="#" class="text-blue-500 font-medium hover:underline">Cliquez ici</a>
      </div>
    </div>
    <div class="mt-12 text-gray-400 text-sm">&copy; Tous droits réservés. © Laundryheap 2025.</div>
  </div>
  <div class="hidden md:flex flex-1 bg-blue-800 bg-opacity-90 rounded-3xl m-2 items-center justify-center relative">
    <div class="w-[90%] h-[90%] bg-blue-800 rounded-2xl flex items-center justify-center relative">
      <div class="absolute inset-0 rounded-2xl border border-white/50 pointer-events-none"></div>
      <div class="relative z-10 flex flex-col justify-center w-full h-full px-10">
        <div class="text-white text-3xl font-bold leading-snug">
          Fraîcheur, soin,<br />
          simplicité&nbsp;: tout<br />
          commence par un clic.
        </div>
        <div>
           <img src="auth.png" alt="">
        </div>
      </div>
    </div>
  </div>
</body>
</html>