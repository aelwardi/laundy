{% extends 'base.html.twig' %}

{% block title %}Commande - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .service-content {
            transition: all 0.3s ease-in-out;
        }
        .service-content.expanded {
            opacity: 1 !important;
            max-height: 2000px !important;
        }
        
        .step-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
        }
        
        .step-icon {
            display: flex;
            align-items: center;
            margin-right: 1rem;
        }
        
        .step-content {
            flex: 1;
            margin-left: 1rem;
        }
        
        .step-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.25rem;
        }
        
        .step-description {
            color: #6B7280;
        }
        
        .btn-edit {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            font-weight: 500;
            color: #2563EB;
            background-color: #DBEAFE;
            border: 1px solid #93C5FD;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }
        
        .btn-edit:hover {
            background-color: #BFDBFE;
        }
        
        .btn-primary {
            display: inline-flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            background-color: #2563EB;
            color: white;
            font-weight: 600;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
            text-decoration: none;
            gap: 0.5rem;
        }
        
        .btn-primary:hover {
            background-color: #1D4ED8;
            color: white;
            text-decoration: none;
        }
        
        .step-summary {
            background-color: #F9FAFB;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .summary-item {
            margin-bottom: 0.75rem;
        }
        
        .summary-card {
            background-color: white;
            border-radius: 0.5rem;
            padding: 1rem;
            border: 1px solid #E5E7EB;
        }
        
        .summary-card-title {
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.5rem;
        }
        
        .form-actions {
            display: flex;
            justify-content: flex-end;
            margin-top: 2rem;
        }
        
        .form-group {
            margin-bottom: 1rem;
        }
        
        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.5rem;
        }
        
        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #D1D5DB;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            transition: all 0.3s ease;
        }
        
        .form-input:focus {
            outline: none;
            border-color: #2563EB;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }
    </style>
{% endblock %}

{% block content %}

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-24">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Nouvelle Commande</h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Suivez les étapes ci-dessous pour passer votre commande de laverie et pressing
        </p>
    </div>
    
    <div class="mb-12">
        <div class="relative">
            <div class="absolute top-5 left-0 w-full h-1 bg-gray-200 rounded-full">
                {% set progress = 0 %}
                {% if orderData.address is defined %}{% set progress = 25 %}{% endif %}
                {% if orderData.delivery is defined %}{% set progress = 50 %}{% endif %}
                {% if orderData.services is defined and orderData.services|length > 0 %}{% set progress = 75 %}{% endif %}
                {% if orderData.contact is defined %}{% set progress = 100 %}{% endif %}
                <div class="h-full bg-gradient-to-r from-blue-500 to-green-500 rounded-full transition-all duration-500" style="width: {{ progress }}%"></div>
            </div>
            
            <div class="relative flex justify-between">
                {% for step in [
                    {id: 'address', label: 'Adresse', number: 1, completed: orderData.address is defined},
                    {id: 'delivery', label: 'Collecte & Livraison', number: 2, completed: orderData.delivery is defined},
                    {id: 'services', label: 'Services', number: 3, completed: orderData.services is defined and orderData.services|length > 0},
                    {id: 'contact', label: 'Contact', number: 4, completed: orderData.contact is defined},
                    {id: 'confirmation', label: 'Confirmation', number: 5, completed: false}
                ] %}
                    <div class="flex flex-col items-center">
                        <div class="flex items-center justify-center w-10 h-10 rounded-full border-2 transition-all duration-300 {{ step.completed ? 'bg-green-500 border-green-500 text-white' : (loop.index0 == 0 or (loop.index0 == 1 and orderData.address is defined) or (loop.index0 == 2 and orderData.delivery is defined) or (loop.index0 == 3 and orderData.services is defined and orderData.services|length > 0) or (loop.index0 == 4 and orderData.contact is defined)) ? 'bg-blue-500 border-blue-500 text-white' : 'bg-white border-gray-300 text-gray-400' }}">
                            {% if step.completed %}
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            {% else %}
                                <span class="text-sm font-bold">{{ step.number }}</span>
                            {% endif %}
                        </div>
                        <span class="mt-2 text-xs font-medium text-center {{ step.completed ? 'text-green-600' : (loop.index0 == 0 or (loop.index0 == 1 and orderData.address is defined) or (loop.index0 == 2 and orderData.delivery is defined) or (loop.index0 == 3 and orderData.services is defined and orderData.services|length > 0) or (loop.index0 == 4 and orderData.contact is defined)) ? 'text-blue-600' : 'text-gray-400' }}">
                            {{ step.label }}
                        </span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-8">
            
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6 transition-all duration-300 {{ orderData.address is not defined ? 'ring-2 ring-blue-500 bg-blue-50' : 'bg-green-50 border-green-200' }}" id="step-address">
                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center space-x-4">
                        {% if orderData.address is defined %}
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        {% else %}
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                        {% endif %}
                    </div>
                    <div class="flex-1 ml-4">
                        <h2 class="text-xl font-semibold text-gray-900 mb-1">Adresse de collecte</h2>
                        <p class="text-gray-600">Où devons-nous récupérer votre linge ?</p>
                    </div>
                    {% if orderData.address is defined %}
                        <button onclick="editStep('address')" class="inline-flex items-center px-4 py-2 text-sm font-medium text-blue-600 bg-blue-100 border border-blue-300 rounded-lg hover:bg-blue-200 transition-colors duration-300">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Modifier
                        </button>
                    {% endif %}
                </div>
                
                {% if orderData.address is defined %}
                    <div class="bg-gray-50 rounded-lg p-4 mb-6" id="summary-address">
                        <div class="mb-3">
                            <strong class="text-gray-900">Adresse:</strong> <span class="text-gray-700">{{ orderData.address.address }}</span>
                        </div>
                        {% if orderData.address.details %}
                            <div class="mb-3">
                                <strong class="text-gray-900">Détails:</strong> <span class="text-gray-700">{{ orderData.address.details }}</span>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
                
                <form method="post" class="space-y-6 {{ orderData.address is defined ? 'hidden' : '' }}">
                    <input type="hidden" name="action" value="set_address">
                    
                    <div class="space-y-2">
                        <label for="address" class="block text-sm font-medium text-gray-700">Adresse complète *</label>
                        <input type="text" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-300" 
                               id="address" 
                               name="address" 
                               value="{{ (orderData.address.address ?? lastAddress.address ?? '') }}" 
                               placeholder="123 Rue de la République, 75001 Paris" 
                               required>
                    </div>
                    
                    <div class="space-y-2">
                        <label for="address_details" class="block text-sm font-medium text-gray-700">Détails complémentaires</label>
                        <textarea class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none transition-colors duration-300" 
                                  id="address_details" 
                                  name="address_details" 
                                  rows="3"
                                  placeholder="Étage, code d'accès, instructions particulières...">{{ (orderData.address.details ?? lastAddress.details ?? '') }}</textarea>
                    </div>
                    
                    {% if lastAddress %}
                    <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <div>
                                <h4 class="font-medium text-blue-900 mb-1">Dernière adresse utilisée</h4>
                                <p class="text-blue-800">{{ lastAddress.address }}</p>
                                {% if lastAddress.details %}
                                <p class="text-blue-700 text-sm mt-1">{{ lastAddress.details }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    
                    <div class="flex justify-end">
                        <button type="submit" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-300 space-x-2">
                            <span>Continuer</span>
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
            {% if orderData.address is defined %}
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6 transition-all duration-300 {{ orderData.delivery is not defined ? 'ring-2 ring-blue-500 bg-blue-50' : 'bg-green-50 border-green-200' }}" id="step-delivery">
                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center space-x-4">
                        {% if orderData.delivery is defined %}
                            <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        {% else %}
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                            </svg>
                        {% endif %}
                    </div>
                    <div class="flex-1 ml-4">
                        <h2 class="text-xl font-semibold text-gray-900 mb-1">Collecte et livraison</h2>
                        <p class="text-gray-600">Quand souhaitez-vous la collecte et la livraison ?</p>
                    </div>
                    {% if orderData.delivery is defined %}
                        <button onclick="editStep('delivery')" class="inline-flex items-center px-4 py-2 text-sm font-medium text-blue-600 bg-blue-100 border border-blue-300 rounded-lg hover:bg-blue-200 transition-colors duration-300">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Modifier
                        </button>
                    {% endif %}
                </div>
                
                {% if orderData.delivery is defined %}
                    <div class="step-summary" id="summary-delivery">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="summary-card">
                                <h4 class="summary-card-title">Collecte</h4>
                                <p><strong>Date:</strong> {{ orderData.delivery.collect_date|date('d/m/Y') }}</p>
                                <p><strong>Heure:</strong> {{ orderData.delivery.collect_time }}</p>
                                {% if orderData.delivery.collect_instructions %}
                                    <p><strong>Instructions:</strong> {{ orderData.delivery.collect_instructions }}</p>
                                {% endif %}
                            </div>
                            <div class="summary-card">
                                <h4 class="summary-card-title">Livraison</h4>
                                <p><strong>Date:</strong> {{ orderData.delivery.delivery_date|date('d/m/Y') }}</p>
                                <p><strong>Heure:</strong> {{ orderData.delivery.delivery_time }}</p>
                                {% if orderData.delivery.delivery_instructions %}
                                    <p><strong>Instructions:</strong> {{ orderData.delivery.delivery_instructions }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
                
                <form method="post" class="step-form {{ orderData.delivery is defined ? 'hidden' : '' }}">
                    <input type="hidden" name="action" value="set_delivery">
                    
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                        <div class="bg-white rounded-lg border border-gray-200 p-6 space-y-4">
                            <div class="flex items-center mb-4">
                                <svg class="w-6 h-6 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                                </svg>
                                <h3 class="text-lg font-semibold text-blue-900">Collecte</h3>
                            </div>
                            
                            <div class="space-y-4">
                                <div class="form-group">
                                    <label for="collect_date" class="form-label">Date de collecte *</label>
                                    <input type="date" 
                                           class="form-input" 
                                           id="collect_date" 
                                           name="collect_date" 
                                           value="{{ (orderData.delivery.collect_date ?? '') }}" 
                                           min="{{ 'now'|date('Y-m-d') }}" 
                                           required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="collect_time" class="form-label">Heure de collecte *</label>
                                    <select class="form-input" id="collect_time" name="collect_time" required>
                                        <option value="">Sélectionner une heure</option>
                                        <option value="08:00-10:00" {% if orderData.delivery is defined and orderData.delivery.collect_time == '08:00-10:00' %}selected{% endif %}>08:00 - 10:00</option>
                                        <option value="10:00-12:00" {% if orderData.delivery is defined and orderData.delivery.collect_time == '10:00-12:00' %}selected{% endif %}>10:00 - 12:00</option>
                                        <option value="14:00-16:00" {% if orderData.delivery is defined and orderData.delivery.collect_time == '14:00-16:00' %}selected{% endif %}>14:00 - 16:00</option>
                                        <option value="16:00-18:00" {% if orderData.delivery is defined and orderData.delivery.collect_time == '16:00-18:00' %}selected{% endif %}>16:00 - 18:00</option>
                                    </select>
                                </div>
                                
                                <div class="form-group">
                                    <label for="collect_instructions" class="form-label">Instructions de collecte</label>
                                    <textarea class="form-input" 
                                              id="collect_instructions" 
                                              name="collect_instructions" 
                                              rows="3"
                                              placeholder="Instructions spéciales...">{{ (orderData.delivery.collect_instructions ?? '') }}</textarea>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-white rounded-lg border border-gray-200 p-6 space-y-4">
                            <div class="flex items-center mb-4">
                                <svg class="w-6 h-6 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                </svg>
                                <h3 class="text-lg font-semibold text-green-900">Livraison</h3>
                            </div>
                            
                            <div class="space-y-4">
                                <div class="form-group">
                                    <label for="delivery_date" class="form-label">Date de livraison *</label>
                                    <input type="date" 
                                           class="form-input" 
                                           id="delivery_date" 
                                           name="delivery_date" 
                                           value="{{ (orderData.delivery.delivery_date ?? '') }}" 
                                           min="{{ 'now'|date('Y-m-d') }}" 
                                           required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="delivery_time" class="form-label">Heure de livraison *</label>
                                    <select class="form-input" id="delivery_time" name="delivery_time" required>
                                        <option value="">Sélectionner une heure</option>
                                        <option value="08:00-10:00" {% if (orderData.delivery.delivery_time ?? '') == '08:00-10:00' %}selected{% endif %}>08:00 - 10:00</option>
                                        <option value="10:00-12:00" {% if (orderData.delivery.delivery_time ?? '') == '10:00-12:00' %}selected{% endif %}>10:00 - 12:00</option>
                                        <option value="14:00-16:00" {% if (orderData.delivery.delivery_time ?? '') == '14:00-16:00' %}selected{% endif %}>14:00 - 16:00</option>
                                        <option value="16:00-18:00" {% if (orderData.delivery.delivery_time ?? '') == '16:00-18:00' %}selected{% endif %}>16:00 - 18:00</option>
                                    </select>
                                </div>
                                
                                <div class="form-group">
                                    <label for="delivery_instructions" class="form-label">Instructions de livraison</label>
                                    <textarea class="form-input" 
                                              id="delivery_instructions" 
                                              name="delivery_instructions" 
                                              rows="3"
                                              placeholder="Instructions spéciales...">{{ (orderData.delivery.delivery_instructions ?? '') }}</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn-primary">
                            <span>Continuer - Services</span>
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
            {% endif %}

            {% if orderData.delivery is defined %}
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6 transition-all duration-300 {{ orderData.services is not defined or orderData.services|length == 0 ? 'ring-2 ring-blue-500 bg-blue-50' : 'bg-green-50 border-green-200' }}" id="step-services">
                <div class="step-header">
                    <div class="step-icon">
                        {% if orderData.services is defined and orderData.services|length > 0 %}
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        {% else %}
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                        {% endif %}
                    </div>
                    <div class="step-content">
                        <h2 class="step-title">Sélection des services</h2>
                        <p class="step-description">Choisissez les services de laverie et pressing dont vous avez besoin</p>
                    </div>
                    {% if orderData.services is defined and orderData.services|length > 0 %}
                        <button onclick="editStep('services')" class="btn-edit">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Modifier
                        </button>
                    {% endif %}
                </div>
                
                {% if orderData.services is defined and orderData.services|length > 0 %}
                    <div class="step-summary" id="summary-services">
                        <h4 class="font-medium text-gray-900 mb-4">Services sélectionnés :</h4>
                        <div class="space-y-3">
                            {% for item in orderData.services %}
                                <div class="flex justify-between items-center bg-white rounded-lg p-3 border border-gray-200">
                                    <div>
                                        <span class="font-medium">{{ item.service_name }}</span>
                                        <span class="text-gray-600">× {{ item.quantity }}</span>
                                    </div>
                                    <span class="font-bold text-blue-600">{{ (item.price * item.quantity) }}€</span>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="mt-4 pt-4 border-t border-gray-200">
                            <div class="flex justify-between items-center">
                                <span class="text-lg font-semibold">Total :</span>
