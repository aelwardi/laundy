function initServiceAccordion() {
    console.log('Initializing service accordion...');
    document.querySelectorAll('[data-service-id]').forEach(element => {
        element.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            const serviceId = this.dataset.serviceId;
            const serviceContent = document.getElementById(`service-content-${serviceId}`);
            const icon = this.querySelector('svg');
            
            console.log('Clicked service:', serviceId);
            console.log('Service content found:', serviceContent);
            console.log('Icon found:', icon);
            
            if (serviceContent) {
                const isExpanded = serviceContent.classList.contains('expanded');
                
                document.querySelectorAll('.service-content').forEach(content => {
                    content.classList.remove('expanded');
                    content.style.opacity = '0';
                    content.style.maxHeight = '0px';
                });
                document.querySelectorAll('[data-service-id] svg').forEach(svg => {
                    svg.classList.remove('rotate-180');
                });
                
                if (!isExpanded) {
                    serviceContent.classList.add('expanded');
                    serviceContent.style.opacity = '1';
                    serviceContent.style.maxHeight = '2000px';
                    if (icon) icon.classList.add('rotate-180');
                }
            } else {
                console.error('Service content not found for ID:', serviceId);
            }
        });
    });
}

function initStepNavigation() {
    document.querySelectorAll('a[href^="#step-"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
}

function initFormValidation() {
    const collectDateInput = document.getElementById('collect_date');
    const deliveryDateInput = document.getElementById('delivery_date');
    
    if (collectDateInput && deliveryDateInput) {
        collectDateInput.addEventListener('change', function() {
            const collectDate = new Date(this.value);
            const minDeliveryDate = new Date(collectDate);
            minDeliveryDate.setDate(minDeliveryDate.getDate() + 1);
            deliveryDateInput.min = minDeliveryDate.toISOString().split('T')[0];
            
            if (deliveryDateInput.value && new Date(deliveryDateInput.value) <= collectDate) {
                deliveryDateInput.value = minDeliveryDate.toISOString().split('T')[0];
            }
        });
    }
}

function editStep(stepId) {
    const step = document.getElementById('step-' + stepId);
    if (step) {
        const form = step.querySelector('.step-form');
        const summary = step.querySelector('.step-summary');
        
        if (form) {
            form.classList.remove('hidden');
        }
        if (summary) {
            summary.classList.add('hidden');
        }
        
        step.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
}
