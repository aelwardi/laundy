<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Laundry{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_section') }}">
                    <strong>Laundry</strong>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_section') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_how_works') }}">Comment ça marche</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_tarification') }}">Services & Tarifs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_contact_us') }}">Contact</a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav">
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white me-2" href="{{ path('app_order') }}">
                                    <i class="fas fa-plus"></i> Nouvelle Commande
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user"></i> {{ app.user.firstName }} {{ app.user.lastName }}
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="{{ path('app_profile') }}"><i class="fas fa-user-cog"></i> Mon Profil</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_ticket') }}"><i class="fas fa-headset"></i> Support</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Déconnexion</a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-primary" href="{{ path('app_auth') }}">
                                    <i class="fas fa-sign-in-alt"></i> Connexion
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Main Content -->
        <main>
            {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        <footer class="bg-light mt-5 py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Laundry</h5>
                        <p class="text-muted">Votre service de blanchisserie professionnel</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="social-links">
                            <h6>Suivez-nous</h6>
                            <a href="#" class="text-muted me-3"><i class="fab fa-facebook"></i></a>
                            <a href="#" class="text-muted me-3"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="text-muted"><i class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="text-center text-muted">
                    <small>Tous droits réservés. © Laundryheap 2025.</small>
                </div>
            </div>
        </footer>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
