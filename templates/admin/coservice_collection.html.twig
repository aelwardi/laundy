{% extends '@EasyAdmin/crud/field/collection.html.twig' %}

{% block collection_widget %}
    <div class="card">
        <div class="card-header">
            <h6 class="mb-0">Catégories de Services</h6>
        </div>
        <div class="card-body">
            <div data-ea-collection-field
                 data-entry-is-complex="true"
                 data-allow-add="{{ allow_add }}"
                 data-allow-delete="{{ allow_delete }}"
                 data-num-items="{{ value|length }}"
                 data-form-type-name-placeholder="{{ form_type_name_placeholder }}">
                
                <div class="ea-form-collection-items">
                    {% for key, item in value %}
                        <div class="ea-form-collection-item card mb-3">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <span class="badge badge-secondary">Catégorie {{ loop.index }}</span>
                                {% if allow_delete %}
                                    <button type="button" class="btn btn-sm btn-outline-danger ea-form-collection-item-remove">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                {% endif %}
                            </div>
                            <div class="card-body">
                                {{ form_widget(item) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% if allow_add %}
                    <div class="ea-form-collection-add-button-wrapper">
                        <button type="button" class="btn btn-outline-primary ea-form-collection-item-add">
                            <i class="fas fa-plus"></i> Ajouter une catégorie
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
